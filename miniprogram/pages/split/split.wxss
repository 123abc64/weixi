.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 上传区域 */
.upload-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.upload-box {
  width: 600rpx;
  height: 600rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 3rpx dashed rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  position: relative;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 17rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  color: white;
  margin-bottom: 10rpx;
}

.upload-tips {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 切割结果预览 */
.grid-preview {
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 30rpx;
}

.grid-title {
  font-size: 32rpx;
  color: white;
  margin-bottom: 20rpx;
  display: block;
  text-align: center;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(3, 1fr);
  gap: 10rpx;
  margin-bottom: 30rpx;
}

.grid-item {
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.grid-image {
  width: 100%;
  height: 100%;
  display: block;
}

.grid-index {
  position: absolute;
  top: 5rpx;
  left: 5rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.start-btn {
  width: 400rpx;
  height: 80rpx;
  background: linear-gradient(45deg, #4facfe, #00f2fe);
  border-radius: 40rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(79, 172, 254, 0.4);
  margin: 0 auto;
}

/* 游戏区域 */
.game-section {
  margin-top: 20rpx;
}

.game-info {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.info-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  margin-right: 10rpx;
}

.info-value {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

/* 游戏控制 */
.game-controls {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.control-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  color: white;
  font-size: 24rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.restart-btn {
  background: linear-gradient(45deg, #4facfe, #00f2fe);
  border: none;
}

.reset-btn {
  background: linear-gradient(45deg, #ff6b6b, #ee5a6f);
  border: none;
}

/* 拼图容器 */
.puzzle-container {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.puzzle-grid {
  width: 600rpx;
  height: 600rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(3, 1fr);
  gap: 4rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 15rpx;
  padding: 10rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

/* 拼图块 */
.puzzle-piece {
  border-radius: 8rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.puzzle-piece:not(.empty) {
  background-color: transparent;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.puzzle-piece:not(.empty):active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.4);
}

.puzzle-piece.empty {
  background: rgba(0, 0, 0, 0.3);
  border: 3rpx dashed rgba(255, 255, 255, 0.3);
}

.piece-image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
  display: block;
}

.puzzle-piece.show-number .piece-number {
  display: block;
}

.piece-number {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  display: none;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.empty-mark {
  color: rgba(255, 255, 255, 0.5);
  font-size: 24rpx;
}

/* 胜利弹窗 */
.victory-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: relative;
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  z-index: 1001;
}

.victory-content {
  text-align: center;
  padding: 40rpx 30rpx;
}

.victory-header {
  margin-bottom: 30rpx;
}

.victory-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.victory-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.victory-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.victory-actions {
  display: flex;
  gap: 20rpx;
}

.victory-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.victory-btn.primary {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
}

.victory-btn.secondary {
  background: #f5f5f5;
  color: #333;
}

/* 加载提示 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  color: white;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}