.container {
  padding: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
  display: block;
}

.debug-section {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.test-image {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx solid #4a90e2;
  border-radius: 10rpx;
}

.test-bg {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx solid #ff6b6b;
  border-radius: 10rpx;
  background-size: cover;
  background-repeat: no-repeat;
}